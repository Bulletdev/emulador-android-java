<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="bg_config_card">@drawable/bg_config_card</item>
        <item name="textColorPrimary">@color/text_primary</item>
        <item name="textColorSecondary">@color/text_secondary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppTheme.OverflowMenu</item>
        <item name="textAppearancePopupMenuHeader">@style/PopupMenuTextAppearanceHeader</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>

    <style name="Widget.AppTheme.OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/background</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="PopupMenuTextAppearanceHeader" parent="TextAppearance.AppCompat.Widget.PopupMenu.Header">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="FilePickerTheme" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
        <item name="nnf_separator_color">@color/nnf_separator_color</item>
        <item name="nnf_save_icon_color">?attr/colorAccent</item>
        <item name="nnf_dir_icon_color">?attr/colorAccent</item>

        <!-- These are important. Handled by toolbar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ConfigTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#b0b0b0</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minHeight">38dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">1dp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">38dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="TextViewVendor" parent="Widget.AppCompat.TextView" >
    </style>

</resources>
